<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css"> </link>
  <script src="http://code.jquery.com/jquery-1.9.1.js" type="text/javascript"></script>
  <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js" type="text/javascript"></script>

  <%= stylesheet_link_tag 'homepage' %>
  <%= javascript_include_tag 'homepage' %>
  <script>
      $(function () {

          $("#trigger1").bind('click', function () {
              $("#slide-panel").toggle('slide');
              $("#trigger1").hide();
              console.log('showing');
          });

          $("#trigger2").bind('click', function () {
              $("#slide-panel").toggle('slide');
              console.log('hiding');
              $("#trigger1").show();
          });

      });

  </script>

  <title>Nii's Website</title>
</head>

<body>
    <div id="home-page">
        <div id="slide-panel" class="ui-widget-content ui-corner-all">
          <h1 align='center'>This is the slide panel</h1>
          <a id="trigger2" href="#"><h4 align='center'>click here to HIDE slide panel</h4></a>
        </div>

        <div>
            <h1 align='center'>Homepage is in the works...</h1>
            <a id="trigger1" href="#"><h4 align='center'>click here to SHOW slide panel</h4></a>
        </div>
    </div>


</body>

</html>